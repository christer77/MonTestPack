{
    "name": "christer77/mon-test-pack",
    "type": "library",
    "description": "ceci est un test de package",
    "keywords": [
        "christer77",
        "MonTestPack"
    ],
    "homepage": "https://github.com/christer77/MonTestPack",
    "license": "MIT",
    "authors": [
        {
            "name": "christer kahasha",
            "email": "kahashachrister77@gmail.com",
            "homepage": "https://github.com/christer77",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "christer77\\MonTestPack\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "christer77\\MonTestPack\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
